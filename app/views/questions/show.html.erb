<% currently_at %>

<h1><%= @question.title %></h1>

<p>
  <time datetime="<%= @question.formatted_created_at %>">
    <%= @question.formatted_created_at %>
  </time>
  <br>
  <%= sanitize @question.body %>
</p>

<%= link_to 'Show', question_path(@question), class: 'btn btn-primary' %>
<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-primary' %>
<%= link_to 'Destroy', question_path(@question), class: 'btn btn-primary',
  data: {method: :delete, confirm: 'Are you sure?'} %>

<hr class="my-3">

<h2>Write your answer:</h2>

<%= render 'answers/form' %>

<h2 class="mt-5 mb-3">Answers:</h2>

<%== pagination @pagy %>

<%= render partial: 'answers/answer', collection: @answers,
  as: :answer, locals: {question: @question} %>

<%== pagination @pagy %>