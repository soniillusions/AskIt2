{
  "name": "app",
  "packageManager": "yarn@4.5.1",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@rails/ujs": "7.1.3-4",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "esbuild": "^0.24.0",
    "jquery": "^3.7.1",
    "nodemon": "^3.1.3",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "sass": "^1.77.5",
    "select2": "^4.1.0-rc.0",
    "select2-bootstrap-5-theme": "^1.3.0",
    "turbolinks": "^5.2.0"
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "mode-sass": "^1.0.0"
  },
  "scripts": {
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"yarn build:css\"",
    "build:css": "sass --style compressed ./app/assets/stylesheets/application.bootstrap.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build": "esbuild app/javascript/*.* --bundle --minify --outdir=app/assets/builds"
  }
}
